                 <version>2.2</version> 
                    <configuration>
                    <url>http://localhost:8080/manager/text</url>
                    <server>TomcatServer</server>
                    <path>/YourPath</path>
                    </configuration>                     
			</plugin>
			
			<artifactId>maven-war-plugin</artifactId>
                        <version>2.6</version>
			<configuration>
                   	  <webResources>
                            <resource>
                                <!-- Relative path to the pom.xml directory -->
                                <directory>more_resources</directory>
